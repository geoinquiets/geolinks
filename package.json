{
  "name": "links",
  "version": "2.0.0",
  "description": "A personal links website",
  "main": "dist/index.html",
  "repository": "git@github.com:jsanz/links.git",
  "author": "Jorge Sanz <jorge@jorgesanz.net>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rimraf dist src/index.html",
    "template": "yarn clean && hbs --data data.json ./src/index.hbs --output src",
    "prestart": "yarn run template",
    "prebuild": "yarn run template",
    "start": "parcel serve ./src/index.html",
    "build": "parcel build ./src/index.html"
  },
  "devDependencies": {
    "hbs-cli": "^1.4.0",
    "parcel": "^2.0.0-beta.3.1",
    "parcel-reporter-static-files-copy": "^1.3.0",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "simple-icons": "^5.8.0",
    "tachyons": "^4.12.0"
  }
}
